{{!
    @template theme_moove/footer

    Footer template

    Example context (json): {}
}}
<style>
            .footer-wrapper{
                background: #272c33;
            }
            .ftr-sec{
                display: flex;
                align-items: center;
                padding-right: 15px;
            }
            .ftr-sec ul{
                list-style-type: none;
                display: flex;
                padding-left: 0;
            }
            .ftr-sec ul li{
                margin: 0 10px;
                border-right: 1px solid #999;
                padding-right: 10px;
            }
            .ftr-sec ul li a{
                padding: 3px 0;
                text-decoration: none;
                color: #999;
                transition: all 0.3s ease 0.0s;
                float: left;
                width: 100%;
                font-size: 14px;
            }
            .ftr-sec ul li a:hover{
                color:#0078d4;
            }
            .ftr-logo{
                margin-left: auto;
                max-width: 90px;
                width: 100%;
                background: #fff;
                padding: 3px 10px;
                border-radius: 5px;
            }
            .ftr-logo img{
                width: 100%;
            }
            .copy-right{
                border-top: 1px solid #444d59;
                color:#999;
                text-align: center;
                padding: 8px 0;
                font-size: 12px;
                font-weight: bold;
            }
            @media only screen and (max-width:480px){
                .ftr-sec,.ftr-sec ul{
                    display: block;
                    text-align: center;
                }
            }
        </style>
<div id="top-footer">
  <div class="container-fluid">
    <div class="row">
        <div class="col-md-7 contact" style="display:none;">
            <h3>{{#str}}stayintouch, theme_moove{{/str}}</h3>
            <h4>{{{getintouchcontent}}}</h4>
            <ul>
                {{#website}}
                    <li>
                        <i class="slicon-globe"></i>
                        <a href="{{{website}}}" target="_blank">{{{website}}}</a>
                    </li>
                {{/website}}
                {{#mobile}}
                    <li>
                        <i class="slicon-phone"></i>
                        <a href="tel:{{{mobile}}}" target="_blank">{{{mobile}}}</a>
                    </li>
                {{/mobile}}
                {{#mail}}
                    <li>
                        <i class="slicon-envelope"></i>
                        <a href="mailto:{{{mail}}}" target="_blank">{{{mail}}}</a>
                    </li>
                {{/mail}}
            </ul>
        </div>
        <div class="col-md-5 social">
          <ul>
              {{#facebook}}
                <li>
                  <a href="{{{facebook}}}" target="_blank" class="facebook btn">
                    <i class="slicon-social-facebook"></i>
                  </a>
                </li>
              {{/facebook}}

              {{#twitter}}
                <li>
                  <a href="{{{twitter}}}" target="_blank" class="twitter btn">
                    <i class="slicon-social-twitter"></i>
                  </a>
                </li>
              {{/twitter}}

              {{#linkedin}}
                <li>
                  <a href="{{{linkedin}}}" target="_blank" class="linkedin btn">
                    <i class="slicon-social-linkedin"></i>
                  </a>
                </li>
              {{/linkedin}}

              {{#youtube}}
                <li>
                  <a href="{{{youtube}}}" target="_blank" class="youtube btn">
                    <i class="slicon-social-youtube"></i>
                  </a>
                </li>
              {{/youtube}}

              {{#instagram}}
                <li>
                  <a href="{{{instagram}}}" target="_blank" class="instagram btn">
                    <i class="slicon-social-instagram"></i>
                  </a>
                </li>
              {{/instagram}}

              {{#whatsapp}}
                  <li>
                      <a href="https://api.whatsapp.com/send?phone={{{whatsapp}}}" target="_blank" class="whatsapp btn">
                          <i class="fa fa-whatsapp"></i>
                      </a>
                  </li>
              {{/whatsapp}}
          </ul>

          {{{ output.standard_footer_html }}}
        </div>
    </div>
  </div>
</div>
<div class="flex-wrapper"></div>
<footer id="page-footer" class="p-y-1">
        <div class="footer-wrapper">
            <div class="ftr-sec">
                <ul>
                    <li><a href="">About Us</a></li>
                    <li><a href="">Privacy Policy</a></li>
                </ul>
                <div class="ftr-logo">
                    <img src="{{ output.get_gurukul_logo }}" alt="footer_logo" />
                </div>
            </div>
            <div class="copy-right">
                &copy; 2021 Gurukul - All Rights Reserved.
            </div>
        </div>
</footer>

{{{ output.standard_end_of_body_html }}}
